{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": ["src/index.ts"]
}
